doctype html

html

    head

        meta(charset="utf-8")

        title

        link(
            rel="stylesheet"
            href="//cdnjs.cloudflare.com/ajax/libs/swagger-ui/3.16.0/swagger-ui.css"
        )

        style.
            body { margin: 0; padding-bottom: 20px; }
            #swagger-ui { overflow: hidden; }

    body
        #swagger-ui

        script(src="//cdnjs.cloudflare.com/ajax/libs/swagger-ui/3.16.0/swagger-ui-bundle.js")
        script(src="//cdnjs.cloudflare.com/ajax/libs/swagger-ui/3.16.0/swagger-ui-standalone-preset.js")
        script.
            SwaggerUIBundle({
                url: "#{url}/docs/api",
                dom_id: '#swagger-ui',
                presets: [
                  SwaggerUIBundle.presets.apis,
                  SwaggerUIStandalonePreset
                ],
                layout: "StandaloneLayout"
            });